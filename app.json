{
  "expo": {
    "name": "First Step — англійські слова",
    "slug": "first_step",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "firststep",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.firststep.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.firststep.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#dbeafe",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["VIBRATE", "POST_NOTIFICATIONS", "RECEIVE_BOOT_COMPLETED"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#3b82f6",
          "sounds": []
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "privacyPolicyUrl": "https://YOUR_GITHUB_USERNAME.github.io/first_step/privacy-policy"
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
